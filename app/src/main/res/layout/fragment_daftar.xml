<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.fm.DaftarFragment">

    <TextView
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="Daftar"
        android:textColor="#00FFAE"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintEnd_toEndOf="@+id/message"
        app:layout_constraintStart_toStartOf="@+id/message" />

    <ScrollView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:orientation="vertical"
            android:padding="10sp">

            <EditText
                android:id="@+id/bt_presiden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Presiden"
                android:inputType="text" />
            <EditText
                android:id="@+id/bt_nim_presiden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NIM Presiden"
                android:inputType="number" />
            <EditText
                android:id="@+id/bt_wakil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Wakil"
                android:inputType="text" />
            <EditText
                android:id="@+id/bt_nim_wakil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nim Wakil"
                android:inputType="number" />


            <EditText
                android:id="@+id/bt_visi"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:inputType="text|textMultiLine"
                android:hint="Visi \n 1. visi 1 \n 2. visi 2 \n 3. visi 3"
                android:gravity="start"/>

            <EditText
                android:id="@+id/bt_misi"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:gravity="start"
                android:hint="Misi \n 1. misi 1 \n 2. misi 2 \n 3. misi 3"
                android:inputType="text|textMultiLine"/>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>